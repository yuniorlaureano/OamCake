@using OamCake.Common
@{
    string MarkLinkAsActive(PageTypes pageType)
    {
        if (ViewData[nameof(PageTypes)] == null)
        {
            return string.Empty;
        }
        var tempPageType = (PageTypes)ViewData[nameof(PageTypes)];
        return tempPageType == pageType ? "active bg-gradient-primary" : "";
    }

    string CollapseMenuUl(PageTypes pageType)
    {
        if (ViewData[nameof(PageTypes)] == null)
        {
            return string.Empty;
        }
        var tempPageType = (PageTypes)ViewData[nameof(PageTypes)];
        return tempPageType == pageType ? " collapse show" : " collapse";
    }
}
